@{
    ViewData["Title"] = "Yeni Şifre Belirle";
    Layout = "~/Views/Shared/_siteLayout.cshtml";
}

<div class="container my-5">
    <h2 class="text-center mb-4">🔐 Yeni Şifre Belirle</h2>

    <form asp-action="PasswordChange" method="post" class="col-md-6 offset-md-3">
        <input type="hidden" name="email" value="@ViewBag.Email" />

        <div class="mb-3">
            <label for="newPassword" class="form-label">Yeni Şifre</label>
            <input type="password" name="newPassword" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Şifreyi Güncelle</button>
    </form>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["Error"]</div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["Success"]</div>
    }
</div>
