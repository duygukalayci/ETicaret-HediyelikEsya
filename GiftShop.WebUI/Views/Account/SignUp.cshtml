@model GiftShop.Entity.Entities.AppUser

@{
    ViewData["Title"] = "Üye Ol";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<style>
    body {
        background-color: #f5f5f5;
    }

    .register-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .SignUp-form {
        background: white;
        padding: 40px 30px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
        font-size: 18px;
    }

        .SignUp-form img {
            display: block;
            margin: 0 auto 25px auto;
            width: 100px;
            height: auto;
        }

        .SignUp-form h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 28px;
        }

        .SignUp-form .form-control {
            margin-bottom: 20px;
            padding: 12px 15px;
            font-size: 18px;
            height: auto;
        }

        .SignUp-form button {
            padding: 12px 30px;
            font-size: 18px;
            display: block;
            margin: 0 auto;
            width: auto;
        }

    .text-muted {
        text-align: center;
        margin-top: 30px;
        font-size: 14px;
        color: #777;
    }

    .link-hover {
        color: black; /* normal rengi */
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .link-hover:hover {
            color: #0056b3; /* üzerine gelince renk */
            text-decoration: underline; /* istersen altı çizili */
        }</style>

<div class="register-container">
    <form asp-action="SignUp" method="post" class="SignUp-form">

        <img src="/giftshopunklasörü/glowing-master/assets/images/2.png" alt="Logo" />
        <h1>Üye Ol</h1>

        <div class="form-group">
            <input asp-for="Name" class="form-control" placeholder="Ad" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Surname" class="form-control" placeholder="Soyad" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Phone" class="form-control" placeholder="Telefon" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email adresiniz" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Kayıt Ol</button>

        <p class="text-muted">Zaten bir hesabın var mı? <a href="/Account/SignIn/" class="link-hover">>Giriş Yap</a></p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
