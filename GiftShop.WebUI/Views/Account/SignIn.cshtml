@model GiftShop.WebUI.Models.LoginViewModel

@{
    ViewData["Title"] = "Giriş";
    Layout = "~/Views/Shared/_siteLayout.cshtml";
}

<style>
    body {
        background-color: #f5f5f5;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .login-form {
        background: white;
        padding: 40px 30px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
        font-size: 18px;
    }

        .login-form img {
            display: block;
            margin: 0 auto 25px auto;
            width: 100px;
            height: auto;
        }

        .login-form h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 28px;
        }

        .login-form .form-control {
            margin-bottom: 20px;
            padding: 12px 15px;
            font-size: 18px;
            height: auto;
        }

        .login-form button {
            padding: 12px 30px;
            font-size: 18px;
            display: block;
            margin: 0 auto;
            width: auto;
        }

    .form-check-label {
        font-size: 16px;
    }

    .text-muted {
        text-align: center;
        margin-top: 30px;
        font-size: 14px;
        color: #777;
    }

    .form-check-input {
        width: 18px;
        height: 18px;
    }

</style>

<div class="login-container">
    <form asp-action="SignIn" method="post" class="login-form">
     @*    @if (!ViewData.ModelState.IsValid)
        {
            foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div class="alert alert-danger">@error.ErrorMessage</div>
            }
        } *@

        <img src="/giftshopunklasörü/glowing-master/assets/images/2.png" alt="Logo" />
        <h1>Üye Girişi</h1>

        <input asp-for="Email" class="form-control" placeholder="Email adresiniz" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <input asp-for="Password" type="password" class="form-control" placeholder="Şifreniz" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <div class="form-check mb-4">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-primary">Giriş Yap</button>

        <p class="text-muted">© 2025 HediyeStore</p>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
