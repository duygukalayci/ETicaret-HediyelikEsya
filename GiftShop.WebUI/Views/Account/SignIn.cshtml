@model GiftShop.WebUI.Models.LoginViewModel

@{
    ViewData["Title"] = "Giriş";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<style>
    body {
        background-color: #f5f5f5;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .login-form {
        background: white;
        padding: 40px 30px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
        font-size: 18px;
    }

        .login-form img {
            display: block;
            margin: 0 auto 25px auto;
            width: 100px;
            height: auto;
        }

        .login-form h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 28px;
        }

        .login-form .form-control {
            margin-bottom: 20px;
            padding: 12px 15px;
            font-size: 18px;
            height: auto;
        }

        .login-form button {
            padding: 12px 30px;
            font-size: 18px;
            display: block;
            margin: 0 auto;
            width: auto;
        }

    .form-check-label {
        font-size: 16px;
    }

    .text-muted {
        text-align: center;
        margin-top: 30px;
        font-size: 14px;
        color: #777;
    }

    .form-check-input {
        width: 18px;
        height: 18px;
    }

    .forgot-link {
        font-size: 16px;
        color: black;
        text-decoration: none;
        transition: all 0.2s ease-in-out;
        display: inline-block;
        margin-top: 5px;
    }

    .forgot-link:hover {
            color: #0a58ca;
            text-decoration: underline;
            transform: scale(1.02);
    }
</style>
