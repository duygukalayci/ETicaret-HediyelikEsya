<div class="login-container">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }


    <form asp-action="SignIn" method="post" class="login-form">
@*         <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
 *@
        <img src="/giftshopunklasörü/glowing-master/assets/images/2.png" alt="Logo" />
        <h1>Üye Girişi</h1>
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })


        <input asp-for="Email" class="form-control" placeholder="Email adresiniz" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <input asp-for="Password" type="password" class="form-control" placeholder="Şifreniz" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <div class="form-check mb-4">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label"></label>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Giriş Yap</button>
        <br />
        <div class="text-center mt-3">
            <a href="/Account/SignUp" class="btn btn-outline-secondary btn-sm">Hesabınız yok mu? Kayıt Olun</a>
        </div>
        <div class="text-center mt-2">
            <a href="/Account/PasswordRenew" class="forgot-link">
                🔒 Şifrenizi mi unuttunuz?
            </a>
        </div>


        <p class="text-muted">© 2025 HediyeStore</p>
    </form>

</div>


<hr />


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
