@{
    ViewData["Title"] = "Şifre Yenile";
    Layout = "~/Views/Shared/_siteLayout.cshtml";
}

<style>
    .renew-container {
        max-width: 500px;
        margin: 80px auto;
        background: #fff;
        border-radius: 12px;
        padding: 40px 30px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

        .renew-container h2 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 28px;
        }

    .form-control {
        font-size: 16px;
        padding: 12px 15px;
        margin-bottom: 20px;
    }

    .btn-renew {
        width: 100%;
        padding: 12px;
        font-size: 18px;
        background-color: #0d6efd;
        border: none;
        color: #fff;
        border-radius: 6px;
        transition: 0.3s ease;
    }

        .btn-renew:hover {
            background-color: #0a58ca;
        }

    /* Alert Genel Stili */
    .custom-alert {
        position: relative;
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 45px 12px 45px;
        margin-top: 20px;
        border-radius: 8px;
        font-size: 16px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        user-select: none;
    }

    /* Başarı Mesajı */
    .custom-alert-success {
        background-color: #d1e7dd;
        color: #0f5132;
        border: 1px solid #badbcc;
    }

    /* Hata Mesajı */
    .custom-alert-error {
        background-color: #f8d7da;
        color: #842029;
        border: 1px solid #f5c2c7;
    }

    /* İkon */
    .alert-icon {
        font-size: 24px;
        flex-shrink: 0;
        user-select: none;
    }

    /* Kapat Butonu */
    .close-btn {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: transparent;
        border: none;
        font-size: 24px;
        font-weight: bold;
        color: inherit;
        cursor: pointer;
        padding: 0;
        line-height: 1;
        user-select: none;
    }

    /* Link Stili */
    .text-link {
        display: block;
        margin-top: 20px;
        text-align: center;
        color: #0d6efd;
        text-decoration: none;
    }

        .text-link:hover {
            text-decoration: underline;
        }
</style>

<div class="renew-container">
    <h2>🔐 Şifre Yenile</h2>

    <form method="post" asp-action="PasswordRenew">
        <input type="email" name="email" class="form-control" placeholder="E-mail adresinizi girin" required />
        <input type="password" name="newPassword" class="form-control" placeholder="Yeni şifrenizi girin" required />

        <button type="submit" class="btn-renew">Şifreyi Yenile</button>

        @if (TempData["Error"] != null)
        {
            <div class="custom-alert custom-alert-error">
                <span class="alert-icon">❌</span>
                <span>@Html.Raw(TempData["Error"])</span>
                <button type="button" class="close-btn" onclick="this.parentElement.style.display='none';" aria-label="Kapat">&times;</button>
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="custom-alert custom-alert-success">
                <span class="alert-icon">✔️</span>
                <span>@Html.Raw(TempData["Success"])</span>
                <button type="button" class="close-btn" onclick="this.parentElement.style.display='none';" aria-label="Kapat">&times;</button>
            </div>
        }
    </form>

    <a href="/Account/SignIn" class="text-link">← Giriş ekranına dön</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
