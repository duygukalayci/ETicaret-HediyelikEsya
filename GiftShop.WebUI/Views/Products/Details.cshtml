@model GiftShop.WebUI.Models.ProductDetailViewModel
@{
    ViewData["Title"] = Model.Product?.Name ?? "Ürün Detayı";
    Layout = "~/Views/Shared/_siteLayout.cshtml";
}

<section>
    <div class="container px-4 px-lg-5 my-1">
        <div class="row gx-4 gx-lg-5 align-items-center">

            <!-- Ürün Resmi -->
            <div class="col-md-6">
                @if (!string.IsNullOrEmpty(Model.Product?.ImageUrl))
                {
                    <img class="card-img-top mb-5 mb-md-0" style="object-fit: contain; max-height: 700px; width: 100%;" src="@Url.Content("~/img/" + Model.Product.ImageUrl)" alt="@Model.Product.Name" />
                }
                else
                {
                    <img class="card-img-top mb-5 mb-md-0" src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg" alt="Resim Yok" />
                }
            </div>

            <!-- Ürün Bilgileri -->
            <div class="col-md-6">

                <h1 class="display-5 fw-bolder mb-3 product-name" style="color:black;">
                    @Model.Product?.Name
                </h1>

                <div class="fs-5 mb-5" style="font-size: 2.5rem; font-weight: 700; color: black;">
                    <span>@Model.Product?.Price.ToString("C")</span>
                </div>

                <p class="lead" style="margin-top: 0.5rem; color:black; font-size:20px;">
                    @(!string.IsNullOrEmpty(Model.Product?.Description)
                                        ? Model.Product.Description
                                        : "Ürün açıklaması bulunmamaktadır.")
                </p>

                <div class="d-flex align-items-center mb-3 mt-5">
                    <input class="form-control text-center me-3 quantity-input" id="inputQuantity" name="quantity" type="number" min="1" value="1" style="max-width: 6rem;" />

                    <form asp-controller="Cart" asp-action="Add" method="post" class="m-0 me-3">
                        <input type="hidden" name="productId" value="@Model.Product.ProductID" />
                        <input type="hidden" name="quantity" id="hiddenQuantity" value="1" />
                        <button type="submit" class="btn btn-outline-dark flex-shrink-0">
                            <i class="bi-cart-fill me-1"></i>
                            Sepete Ekle
                        </button>
                    </form>

                    <form asp-controller="Favorites" asp-action="Add" method="post" class="m-0">
                        <input type="hidden" name="ProductID" value="@Model.Product.ProductID" />
                        <button type="submit" class="btn btn-link p-0" title="Favorilere Ekle" style="font-size: 1.8rem; color:@(Model.IsFavorite ? "red" : "gray")">
                            <ion-icon name="heart" aria-label="Favori"></ion-icon>
                        </button>
                    </form>
                </div>


            </div>
        </div>
    </div>
</section>

<!-- İlgili Ürünler -->
<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="fw-bolder mb-4 text-center" style="color: #333;">Bunları da Beğenebilirsiniz</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var related in Model.RelatedProducts)
            {
                <div class="col mb-5">
                    <div class="card h-100 shadow-sm border-0">
                        <img class="card-img-top" src="@Url.Content("~/img/" + (string.IsNullOrEmpty(related.ImageUrl) ? "default.jpg" : related.ImageUrl))" alt="@related.Name">
                        <div class="card-body p-4 text-center">
                            <h5 class="fw-bold">@related.Name</h5>
                            <p class="mb-0 text-muted">@related.Price.ToString("C")</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 text-center">
                            <a class="btn btn-outline-dark mt-auto" href="@Url.Action("Details", "Products", new { id = related.ProductID })">İncele</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script>
        const inputQuantity = document.getElementById('inputQuantity');
        const hiddenQuantity = document.getElementById('hiddenQuantity');

        inputQuantity.addEventListener('input', () => {
            let val = parseInt(inputQuantity.value);
            if (isNaN(val) || val < 1) val = 1;
            inputQuantity.value = val;
            hiddenQuantity.value = val;
        });
    </script>
}

<style>
    div.fs-5.mb-5 {
        font-size: 2.5rem !important;
        font-weight: 700;
        color: black;
        margin-top: 1rem;
        margin-bottom: 2rem;
    }

    .quantity-input {
        max-width: 6rem;
        height: 40px;
        font-size: 1.2rem;
        font-weight: 500;
        border: 1px solid #ccc;
        border-radius: 4px;
    }
</style>
