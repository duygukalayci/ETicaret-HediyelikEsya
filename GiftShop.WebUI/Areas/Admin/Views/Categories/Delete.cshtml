@model GiftShop.Entity.Entities.Category

@{
    ViewData["Title"] = "Kategori Sil";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3>Silmek istediğinize emin misiniz?</h3>
<div>
<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

    <dt class="col-sm-2 mb-3">@Html.DisplayNameFor(model => model.Description)</dt>
    <dd class="col-sm-10 mb-3">@Html.DisplayFor(model => model.Description)</dd>

    <dt class="col-sm-2 mb-3">@Html.DisplayNameFor(model => model.IsTopMenu)</dt>
    <dd class="col-sm-10 mb-3">@(Model.IsTopMenu == true ? "Evet" : "Hayır")</dd>

    <dt class="col-sm-2 mb-3">Üst Kategori</dt>
    <dd class="col-sm-10 mb-3">@Model.ParentCategory?.Name ?? "Yok"</dd>

    <dt class="col-sm-2 mb-3">@Html.DisplayNameFor(model => model.IsActive)</dt>
    <dd class="col-sm-10 mb-3">@Html.DisplayFor(model => model.IsActive)</dd>

    <dt class="col-sm-2 mb-3">@Html.DisplayNameFor(model => model.CreateDate)</dt>
    <dd class="col-sm-10 mb-3">@Html.DisplayFor(model => model.CreateDate)</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CategoryID" />
    <input type="submit" value="Sil" class="btn btn-danger" /> |
    <a asp-action="Index">Listeye Dön</a>
</form>
</div>
