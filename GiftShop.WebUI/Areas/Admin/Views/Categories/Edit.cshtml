@model GiftShop.Entity.Entities.Category

@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" asp-route-id="@Model.CategoryID" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryID" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group form-check mt-1">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <div class="form-group form-check mt-1">
                <input asp-for="IsTopMenu" class="form-check-input" />
                <label asp-for="IsTopMenu" class="form-check-label">Üst Menüde Göster</label>
                <span asp-validation-for="IsTopMenu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ParentCategoryID" class="control-label">Üst Kategori</label>
                <select asp-for="ParentCategoryID" asp-items="ViewBag.CategoryList" class="form-control">
                    <option value="">-- Üst Kategori Seçin --</option>
                </select>
                <span asp-validation-for="ParentCategoryID" class="text-danger"></span>
            </div>

            <input asp-for="CreateDate" type="hidden" />

            <div class="form-group mt-2">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

