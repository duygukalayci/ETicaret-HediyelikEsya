@model IEnumerable<GiftShop.Entity.Entities.OrderDetail>

@{
    ViewData["Title"] = "Sipariş Detayları";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Sipariş No</th>
            <th>Ürün Adı</th>
            <th>Adet</th>
            <th>Birim Fiyatı</th>
            <th>Toplam Tutar</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Order.OrderID</td>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@String.Format("{0:C}", item.UnitPrice)</td>
                <td>@String.Format("{0:C}", item.TotalAmount ?? (item.Quantity * item.UnitPrice))</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.OrderDetailID" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.OrderDetailID" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

