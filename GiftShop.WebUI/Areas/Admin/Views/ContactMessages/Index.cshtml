@model IEnumerable<GiftShop.Entity.Entities.ContactMessage>

@{
    ViewData["Title"] = "İletişim Formları";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().Subject)</th>
            <th>@Html.DisplayNameFor(model => model.First().Message)</th>
            <th>@Html.DisplayNameFor(model => model.First().IsRead)</th>
            <th>@Html.DisplayNameFor(model => model.First().CreatedAt)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                <td>@Html.DisplayFor(modelItem => item.Message)</td>
                <td>
                    @if (item.IsRead)
                    {
                        <span class="badge bg-success">Okundu</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Yeni</span>
                    }
                </td>
                <td>@(item.CreatedAt.HasValue? item.CreatedAt.Value.ToString("dd.MM.yyyy HH:mm") : "-")</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.ContactMessageID"><i class="fa-solid fa-pen-to-square"></i></a> |

                    <a asp-action="Details" asp-route-id="@item.ContactMessageID" class="btn btn-info btn-sm"><i class="fa-solid fa-magnifying-glass"></i></a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ContactMessageID"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
