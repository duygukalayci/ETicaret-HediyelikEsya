@model IEnumerable<GiftShop.Entity.Entities.Shipment>
@{
    ViewData["Title"] = "Kargo Takip Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Sipariş No</th>
            <th>Kullanıcı</th>
            <th>Kargo Firması</th>
            <th>Takip Numarası</th>
            <th>Gönderim Tarihi</th>
            <th>Teslim Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Order?.OrderID</td>
                <td>@item.Order?.AppUser?.Email</td>
                <td>@item.Carrier</td>
                <td>@item.TrackingNumber</td>
                <td>@item.ShippedDate?.ToString("dd.MM.yyyy")</td>
                <td>@(item.DeliveredDate.HasValue? item.DeliveredDate.Value.ToString("dd.MM.yyyy") : "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ShipmentID" class="btn btn-sm btn-primary">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.ShipmentID" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.ShipmentID" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
