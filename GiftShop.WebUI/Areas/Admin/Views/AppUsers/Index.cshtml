@model IEnumerable<GiftShop.Entity.Entities.AppUser>

@{
	ViewData["Title"] = "Kullanıcılar";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<p>
	<a asp-action="Create" class="btn btn-outline-primary"><i class="fa-solid fa-plus"></i> Yeni Kullanıcı Ekle</a>
</p>
<table class="table table-hover table-striped">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Surname)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IsAdmin)
			</th>

			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Surname)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@if (item.IsAdmin == true)
					{
						<span class="badge bg-success">Admin</span>
					}
					else
					{
						<span class="badge bg-secondary">Kullanıcı</span>
					}
				</td>



				<td>
					<a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.AppUserID"><i class="fa-solid fa-pen-to-square"></i>Düzenle</a> |
					<a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.AppUserID"><i class="fa-solid fa-magnifying-glass"></i>Detay</a> |
					<a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.AppUserID"><i class="fa-solid fa-trash"></i>Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>
